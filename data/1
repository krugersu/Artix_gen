CREATE TABLE invent (
    inventid            INT  PRIMARY KEY,
    inventcode          TEXT,
    inventgroup         TEXT,
    name                TEXT,
    barcode             TEXT,
    barcodes            TEXT,
    price               TEXT,
    minprice            TEXT,
    additionalprices    TEXT,
    inventitemoptionsid TEXT,
    optionsid           TEXT,
    priceoptionsid      TEXT,
    quantityoptionsid   TEXT,
    sellrestrictperiods      TEXT,
    extendedoptions      TEXT,
    discautoscheme      TEXT,
    deptcode      TEXT,
    taxgroupcode      TEXT,
    measurecode      TEXT,
    articul      TEXT,
    defaultquantity      TEXT,
    taramode      TEXT,
    taracapacity      TEXT,
    remain      TEXT,
    remaindate      TEXT,
    alcoholpercent      TEXT,
    cquant      TEXT,    
    alctypecode      TEXT,
    loyaltymode      TEXT    

);
